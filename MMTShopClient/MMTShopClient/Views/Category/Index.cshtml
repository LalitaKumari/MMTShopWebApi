@model IEnumerable<MMTShopClient.ViewModel.Category>
@{
    ViewData["Title"] = "Category Page";
}
<h4>All Categories</h4>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Category Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><a asp-controller="Home" asp-action="Products" asp-route-categoryId="@item.CategoryId"> @item.CategoryName </a></td>
            </tr>
        }
    </tbody>
</table>

<br />
<a class="btn btn-sm btn-info" href="~/Home/Index">BackToFeaturedProducts</a>