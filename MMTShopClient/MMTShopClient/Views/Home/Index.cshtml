
@model IEnumerable<MMTShopClient.ViewModel.Product>
@{
    ViewData["Title"] = "Home Page";
}

<h4>Featured Products</h4>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>SKU</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Description</td>
                <td>@item.SKU</td>
                <td>£@item.Price</td>
            </tr>
        }
    </tbody>
</table>

<br />
<a asp-controller="Category" asp-action="Index" class="btn btn-sm btn-primary">All Categories</a>
